@model ECommerceUI.Models.LoginViewModel

<h2 style="text-align: center; margin-bottom: 20px;">Login</h2>

<form asp-action="Index" method="post" style="max-width: 400px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px;">
    <div style="margin-bottom: 15px;">
        <label asp-for="Username" style="display: block; margin-bottom: 5px;"></label>
        <input asp-for="Username" style="width: 100%; padding: 8px;" />
    </div>

    <div style="margin-bottom: 20px;">
        <label asp-for="Password" style="display: block; margin-bottom: 5px;"></label>
        <input asp-for="Password" type="password" style="width: 100%; padding: 8px;" />
    </div>

    <button type="submit" style="width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px;">
        Login
    </button>

    @if (ViewBag.Error != null)
    {
        <p style="color: red; margin-top: 15px; text-align: center;">@ViewBag.Error</p>
    }
    <p style="text-align: center; margin-top: 15px;">
        Don't have an account?
        <a asp-controller="Register" asp-action="Index">Register here</a>
    </p>

</form>
