@{
    ViewData["Title"] = "Home Page";
}

<style>
    .card-container {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-top: 50px;
        flex-wrap: wrap;
    }

    .card {
        width: 250px;
        height: 180px;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 10px;
        text-align: center;
        padding: 30px 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card h3 {
            margin-bottom: 15px;
            color: #333;
        }

        .card a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>


<form asp-controller="Login" asp-action="Logout" method="post" style="text-align: right; margin: 20px;">
    <button type="submit" class="btn btn-danger">Logout</button>
</form>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Manage your application modules below.</p>
</div>

<div class="card-container">
    <div class="card">
        <h3>Categories</h3>
        <a asp-controller="Category" asp-action="Index">Go to Categories</a>
    </div>
    <div class="card">
        <h3>Companies</h3>
        <a asp-controller="Company" asp-action="Index">Go to Companies</a>
    </div>
    <div class="card">
        <h3>Products</h3>
        <a asp-controller="Product" asp-action="Index">Go to Products</a>
    </div>
</div>
